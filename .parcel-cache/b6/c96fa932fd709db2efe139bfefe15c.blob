/* css reset */
*{box-sizing: border-box;}
*::after, *::after{box-sizing: border-box;} /* 伪元素 */
*{margin: 0; padding: 0;}
ul,ol{list-style: none;}
a{color: inherit;text-decoration: none;}

 /* style  */
 body{background: #eee;}

.globalHeader {
    margin: 20px;
}
.searchForm{
    display: flex;
    justify-content: space-between;
}
.searchForm > input {
    width: 100%;
    margin-right: 16px;
    height: 40px;
    padding: 0 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}
.searchForm > button {
    white-space: nowrap;
    padding: 0 10px;
    border: none;
    width: 80px;
    background: rgb(0, 96, 156);
    border-radius: 4px;
    color : rgb(255, 255, 255) ;
    font-family : Microsoft YaHei ;
    font-size : 16px ;
}

.globalMain {}

.siteList {
    margin: 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.siteList > li {
    margin-bottom: 10px;
}
.siteList .site {
    width: 160px;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: white;
    border: 1px solid #ddd;
    border-radius: 4px;
}
.siteList .site > .logo{
    width: 71px;
    height: 65px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size : 64px ;
}
.siteList .site > .link {
    font-family : Microsoft YaHei ;
    font-size : 14px ;
    margin-top: 4px;
}
.siteList .addButton {
    border: 1px solid #ddd;
    background: #fff;
    border-radius: 4px;
    width: 160px;
    height: 130px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 20px;
}
.siteList .addButton .icon{
    width: 60px;
    height: 60px;
}
.siteList .addButton .icon-wrapper{
    width: 64px;
    height: 64px;
    display: flex;
    justify-content: center;
    align-items: center;
}