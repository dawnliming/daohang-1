/* css reset */
*{box-sizing: border-box;}
*:before, *:after{box-sizing: border-box;} /* 伪元素 */
*{margin: 0; padding: 0;}
ul,ol{list-style: none;}

 /* style  */
 body{background: #eee;}

.globalHeader {
    margin: 20px 20px;
    display: flex;
    justify-content: space-between;
}
.globalHeader > input {
    width: 100%;
    margin-right: 16px;
    height: 40px;
    padding: 0 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}
.globalHeader > button {
    white-space: nowrap;
    padding: 0 10px;
    border: none;
    background: rgb(0, 96, 156);
    border-radius: 4px;
    color : rgb(255, 255, 255) ;
    font-family : Microsoft YaHei ;
    font-size : 16px ;
}

